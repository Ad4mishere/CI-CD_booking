		{
			"name": "Available Time Slots",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Returns 200 OK\", () => {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response is an array\", () => {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(Array.isArray(json)).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"At least one time slot is returned\", () => {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(json.length).to.be.greaterThan(0);\r",
							"});\r",
							"\r",
							"pm.test(\"Returned slots contain required fields\", () => {\r",
							"  const json = pm.response.json();\r",
							"  json.forEach(slot => {\r",
							"    pm.expect(slot).to.have.property(\"id\");\r",
							"    pm.expect(slot).to.have.property(\"date\");\r",
							"    pm.expect(slot).to.have.property(\"start_time\");\r",
							"  });\r",
							"});\r",
							"\r",
							"\r",
							"const slots = pm.response.json();\r",
							"\r",
							"// PUT kräver två olika lediga tider\r",
							"pm.expect(slots.length).to.be.greaterThan(1);\r",
							"\r",
							"// Första lediga tiden → POST\r",
							"pm.collectionVariables.set(\r",
							"  \"originalTimeSlotId\",\r",
							"  Number(slots[0].id)\r",
							");\r",
							"\r",
							"// Andra lediga tiden → PUT\r",
							"pm.collectionVariables.set(\r",
							"  \"newTimeSlotId\",\r",
							"  Number(slots[1].id)\r",
							");\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
